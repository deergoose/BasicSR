{
    "name": "RRDB_ESRGAN_x4_DSTL", //  please remove "debug_" during training
    "use_tb_logger": true,
    "model": "srragan",
    "scale": 4,
    "gpu_ids": [0, 1, 2, 3],
    "unet": true,
    "unet_model": "../experiments/pretrain_models/unet/CP_170.pth",
    "datasets": {
        "train": {
            "name": "dstl",
            "mode": "dstl",
            "dataroot_HR": "/workspace/dstl",
            "dataroot_LR": null,
            "subset_file": null,
            "use_shuffle": true,
            "n_workers": 64,
            "batch_size": 16,
            "HR_size": 128,
            "use_flip": true,
            "use_rot": true
        },
        "val": {
            "name": "dstl_val",
            "mode": "dstl",
            "dataroot_HR": "/workspace/dstl",
            "dataroot_LR": null
        }
    },
    "path": {
        "root": "/workspace/BasicSR",
        "pretrain_model_G": "../experiments/pretrain_models/init_models/RRDB_PSNR_x4_100K.pth",
        "pretrain_model_D": "../experiments/pretrain_models/init_models/1000_D.pth"
    },
    "network_G": {
        "which_model_G": "RRDB_net", // RRDB_net | sr_resnet
        "norm_type": null,
        "mode": "CNA",
        "nf": 64,
        "nb": 23,
        "in_nc": 3,
        "out_nc": 3,
        "gc": 32,
        "group": 1
    },
    "network_D": {
        "which_model_D": "discriminator_vgg_128",
        "norm_type": "batch",
        "act_type": "leakyrelu",
        "mode": "CNA",
        "nf": 64,
        "in_nc": 3
    },
    "train": {
        "lr_G": 1e-4,
        "weight_decay_G": 0,
        "beta1_G": 0.9,
        "lr_D": 1e-4,
        "weight_decay_D": 0,
        "beta1_D": 0.9,
        "lr_scheme": "MultiStepLR",
        "lr_steps": [20000, 40000, 60000, 80000],
        "lr_gamma": 0.5,
        "pixel_criterion": "l1",
        "pixel_weight": 1e-2,
        "feature_criterion": "l1",
        "feature_weight": 1,
        "gan_type": "vanilla",
        "gan_weight": 5e-3,
        //for wgan-gp
        //"D_update_ratio": 1,
        //"D_init_iters": 1000,
        // "gp_weigth": 10,
        "manual_seed": 0,
        "niter": 1e5,
        "val_freq": 5e3
    },
    "logger": {
        "print_freq": 2e2,
        "save_checkpoint_freq": 5e3
    }
}
