{
    "name": "SFTGANx4_dstl",
    "use_tb_logger": false,
    "model": "sftgan",
    "scale": 4,
    "gpu_ids": [0, 1, 2, 3],

    "datasets": {
        "train": {
            "name": "dstl",
            "mode": "dstl",
            "dataroot_HR": "/workspace/dstl_simple",
            "dataroot_HR_bg": null,
            "dataroot_LR": null,
            "subset_file": null,
            "use_shuffle": true,
            "n_workers": 1,
            "batch_size": 64,
            "HR_size": 96,
            "use_flip": true,
            "use_rot": false
        }
    },
    "path": {
        "root": "/workspace/BasicSR",
        "resume_state": null,
        "pretrain_model_G": "../experiments/pretrained_models/SFTGANx4_dstl_G/models/80000_G.pth",
        "pretrain_model_D": "../experiments/pretrained_models/SFTGANx4_dstl_D/models/latest_D.pth"
    },
    "network_G": {
        "which_model_G": "sft_arch"
    },
    "network_D": {
        "which_model_D": "dis_acd"
    },
    "train": {
        "lr_G": 1e-6,
        "weight_decay_G": 0,
        "beta1_G": 0.9,
        "lr_D": 1e-6,
        "weight_decay_D": 0,
        "beta1_D": 0.9,
        "lr_scheme": "MultiStepLR",
        "lr_steps": [2e4, 3e4, 4e4, 5e4],
        "lr_gamma": 0.5,
        "pixel_criterion": "l2",
        "pixel_weight": 1,
        "feature_criterion": "l1",
        "feature_weight": 0,
        "gan_type": "lsgan",
        "gan_weight": 1e-4,
        //for wgan-gp
        //"D_update_ratio": 1,
        //"D_init_iters": 1e4,
        //"gp_weigth": 10,
        "manual_seed": 0,
        "niter": 1e5,
        "val_freq": 2e3
    },
    "logger": {
        "print_freq": 1e2,
        "save_checkpoint_freq": 5e3
    }
}
